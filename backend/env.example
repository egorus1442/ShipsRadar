# Backend Environment Variables
# Copy this file to .env and fill in your values

# ========================================
# API Keys (NOT REQUIRED!)
# ========================================

# Stage 3 использует Nominatim (OpenStreetMap) - БЕСПЛАТНО, БЕЗ РЕГИСТРАЦИИ!
# Mapbox API Key НЕ ТРЕБУЕТСЯ для геокодинга
# MAPBOX_API_KEY=not_needed

# ========================================
# Application Settings
# ========================================

ENVIRONMENT=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# ========================================
# CORS (Frontend origins)
# ========================================

CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# External APIs (Optional - for Stage 4+)
# ========================================

# Copernicus Marine Service (for ocean currents)
# Get credentials at: https://marine.copernicus.eu/
# COPERNICUS_USERNAME=
# COPERNICUS_PASSWORD=

# ========================================
# Weather Data Source
# ========================================

# Use mock weather data for testing/demo (bypasses Open-Meteo API limits)
# Set to True for testing, False for production with real data
USE_MOCK_WEATHER=True

